<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Lista de Tareas</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
		<form action="/" method="post">
		  <div class="input-group">
		    <input type="text" id= "nombreTarea" class="form-control" name="title"  placeholder="Ingrese nombre">
		    <span class="input-group-btn">
		      <input type="submit" value="Guardar" onclick="ValidarCampo();" class="btn btn-default">
		    </span>
		  </div><!-- /input-group -->
		  </form>
		</div>
	</div>
	<div class="row tareas">
		<div class="col-lg-6 col-lg-offset-3">
			<ul>
				<% @Tareas.each do |tarea| %>
				  <li style="height: 40px;">
				    <span>
				      <%= tarea['title'] %>
				    </span>
				    <span class="opciones">
				    <a href="/<%= tarea['id'] %>" class="btn btn-info btn-xs"><%= tarea['done'] ? "Completada" : "Sin Completarse"%></a>
				    <a href="/delete/<%= tarea['id'] %>" class="btn btn-danger btn-xs">Eliminar</a>
				    </span>
				  </li>
			<% end %>
			</ul>
		</div>
	</div>


</div>